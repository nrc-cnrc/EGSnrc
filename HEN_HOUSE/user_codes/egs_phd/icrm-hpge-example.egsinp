##############################################################################
### MEDIA
##############################################################################
:start media definition:

    # Cutoff energies
    ae  = 0.512             # lowest  energy for electrons (kinetic+0.511)
    ap  = 0.01              # lowest  energy for photons   (kinetic)
    ue  = 50.511            # maximum energy for electrons (kinetic+0.511)
    up  = 50                # maximum energy for photons   (kinetic)

    :start air:
        density correction file     = air_dry_nearsealevel
    :stop air:

    :start aluminum:
        density correction file     = aluminum
    :stop aluminum:

    :start lead:
        density correction file     = lead
    :stop lead:

    :start germanium:
        density correction file     = germanium
    :stop germanium:

    :start water:
        density correction file     = water_icru90
    :stop water:

    :start cellulose:
        density correction file     = icrm_cellulose
    :stop cellulose:

    :start dirt:
        density correction file     = icrm_dirt
    :stop dirt:

:stop media definition:

##############################################################################
### SOURCE
##############################################################################
:start source definition:
    # NOTE:
    # When you change source energy also change scoring energy max

    # Point source
    #:start source:
        library     = egs_point_source
        name        = point_source

        # Positioned 1mm above detector window
        position    = 0 0 0.1

        charge      = 0
        :start spectrum:
            type    = monoenergetic
            energy  = 0.05
#             energy  = 0.1
#             energy  = 0.2
#             energy  = 0.5
#             energy  = 1.0
        :stop spectrum:
    :stop source:

    # Water source
    :start source:
        name                = water_source
        library             = egs_isotropic_source
        charge              = 0
        geometry            = water_source_geom
        :start shape:
            type     = cylinder
            radius   = 4.5
            height   = 4
            axis     = 0 0 1
            midpoint = 0 0 2.1
        :stop shape:
        :start spectrum:
            type    = monoenergetic
            energy  = 0.05
#             energy  = 0.1
#             energy  = 0.2
#             energy  = 0.5
#             energy  = 1.0
        :stop spectrum:
    :stop source:

    # Soil source
    #:start source:
        name                = soil_source
        library             = egs_isotropic_source
        charge              = 0
        geometry            = soil_source_geom
        :start shape:
            type     = cylinder
            radius   = 3
            height   = 2
            axis     = 0 0 1
            midpoint = 0 0 1.1
        :stop shape:
        :start spectrum:
            type    = monoenergetic
            energy  = 0.05
#             energy  = 0.1
#             energy  = 0.2
#             energy  = 0.5
#             energy  = 1.0
        :stop spectrum:
    :stop source:

    # Filter source
    #:start source:
        name                = filter_source
        library             = egs_isotropic_source
        charge              = 0
        geometry            = filter_source_geom
        :start shape:
            type     = cylinder
            radius   = 4
            height   = 0.3
            axis     = 0 0 1
            midpoint = 0 0 0.25
        :stop shape:
        :start spectrum:
            type    = monoenergetic
            energy  = 0.05
#             energy  = 0.1
#             energy  = 0.2
#             energy  = 0.5
#             energy  = 1.0
        :stop spectrum:
    :stop source:

    simulation source = water_source

:stop source definition:


##############################################################################
### AUSGAB
##############################################################################

:start ausgab object definition:
    # Score tracks
    #:start ausgab object:
        name    = tracks
        library = egs_track_scoring
        stop scoring = 2000
    :stop ausgab object:

    # Score dose
    :start ausgab object:
        library      = egs_dose_scoring
        name         = doseScoring
        medium dose  = no # no  (default)
        region dose  = yes  # yes (default)
        volume       = 1 # in cm**3
        dose regions = crystal_with_dead_label
        #dose regions = crystal_no_dead_label
    :stop ausgab object:
:stop ausgab object definition:


##############################################################################
### SCORING OPTIONS
##############################################################################

# For egs_phd
:start scoring options:

    :start spectrum:
        label = crystal_with_dead_label
        Emin  = 0.0

        # Adjust Emax for each source (E+1%)
        Emax  = 0.0505 # E=0.05
#         Emax  = 0.101 # E=0.1
#         Emax  = 0.202 # E=0.2
#         Emax  = 0.505 # E=0.5
#         Emax  = 1.01 # E=1.0

        bins  = 1000
        spectrum file = icrm-hpge_water-50keV.dat
    :stop spectrum:

:stop scoring options:

# For egs_chamber
#:start scoring options:

    silent = 0 # 0 (verbose output), >0 (short output)

    :start calculation geometry:
        geometry name = detector_watersource_shielding
        cavity regions = crystal_with_dead_label
        #cavity regions = crystal_no_dead_label
        cavity mass = 1 # not the correct mass, dose will be wrong
        cavity geometry = detector_watersource_shielding
    :stop calculation geometry:

:stop scoring options:

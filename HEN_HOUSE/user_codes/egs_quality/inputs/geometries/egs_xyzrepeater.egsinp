:start geometry definition:
    :start geometry:
        name        = my_sphere
        library     = egs_spheres
        midpoint = 0
        radii = 0.5
        :start media input:
            media = air
        :stop media input:
    :stop geometry:

    :start geometry:
        name            = quality_geom
        library         = egs_ndgeometry
        type            = EGS_XYZRepeater
        medium          = water

        repeated geometry = my_sphere

        # Format is: min, max, N
        repeat x = -1 4 3
        repeat y = -1 4 3
        repeat z = -1 4 3

        set label = quality_doseLabel 0
    :stop geometry:

    simulation geometry = quality_geom

:stop geometry definition:

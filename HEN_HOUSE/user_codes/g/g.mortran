"========================="
IF (mono =1) [return;]
ei=eis(itimes); eik = ei;
ecount = 0; esum = 0; esum2 = 0;
IF (neis > 1)[
  write(6,'(a,$)')
  '===> Incident kinetic energy (MeV): ';
  write(6,'(f15.8,10x,a)') ei-abs(iqi)*rm, '      ********************';
]
return;


entry source_get_samplede(es,des);
"================================="

IF( ecount <= 2 ) return;
aux = esum/ecount;
aux2 = esum2/ecount;
aux2 = (aux2 - aux*aux)/(ecount-1);
IF( aux2 > 0 ) [ aux2 = sqrt(aux2); ]
es = aux; des = aux2;
return;

entry source_set_energy(ein);

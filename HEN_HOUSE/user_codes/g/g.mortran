subroutine source;

"************************************************************************""
$IMPLICIT-NONE;

;COMIN/GetInput,USEFUL,UPHIOT,RANDOM, ENERGIES/;

$INTEGER ival;

REPLACE {$NENSRC} WITH {250};

$INTEGER mono;

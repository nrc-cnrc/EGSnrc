iqin = iqi;
irin = 1;
IF( mono = 0 | mono = 2 | mono = 3 ) [ ein = ei; wtin = 1; ]
ELSE [
    ein = alias_sample(nensrc,ensrcd,srcpdf_at,srcbin_at);
    wtin = 1; eik = ein;
    IF( iqin ~= 0 ) [ ein = ein + rm; ]
]
ecount = ecount + 1;
esum = esum + eik;
esum2 = esum2 + eik*eik;

"The position and direction doesn't matter in an infinite space"
xin = 0; uin = 0; zin = 0;
uin = 0; vin = 0; win = 1;

return;


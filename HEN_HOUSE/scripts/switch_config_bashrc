EGS_CONFIG=$1
hh=`cat $EGS_CONFIG | grep "HEN_HOUSE = " | sed 's/HEN_HOUSE = //'`
if test -f $hh/scripts/egsnrc_bashrc_additions; then
    export EGS_CONFIG
    \. $hh/scripts/egsnrc_bashrc_additions
fi

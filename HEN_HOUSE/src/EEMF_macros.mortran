	IF($changingEMField)[;
	"Distance to transport in field:"

	WHILE ({P1} >0.)[;
	IF ({P1} > $changingEMStepDist)[
		IF(abs(E_amp) > 0.)[
			$EF_Transport($changingEMStepDist);

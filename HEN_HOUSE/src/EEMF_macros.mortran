  $INTERACT_EM(uem2, vem2, wem2);
 ]ELSE[
 u_em=0.;
 v_em=0.;
 w_em=0.;
 ]


" Add the interaction to the total for the integral sum: "
  uem = uem + u_em;
  vem = vem + v_em;
  wem = wem + w_em;

  dxEM= dxEM + u_em*beta_em/beta_em0;
  dyEM= dyEM + v_em*beta_em/beta_em0;
  dzEM= dzEM + w_em*beta_em/beta_em0;

  dxEM = dxEM/6.;
  dyEM = dyEM/6.;
  dzEM = dzEM/6.;

